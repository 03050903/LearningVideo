<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="简单播放器"
            android:onClick="clickSimplePlayer"
    />

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OpenGL 渲染简单三角形"
            android:onClick="clickSimpleTriangle"
    />

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OpenGL 渲染简单纹理贴图"
            android:onClick="clickSimpleTexture"
    />
    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OpenGL 渲染视频"
            android:onClick="clickOpenGLPlayer"
    />

</LinearLayout>